<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:media1="clr-namespace:MediaManager.Forms;assembly=MediaManager.Forms"
             x:Class="VideoBD.MainPage"
             Title="Take Video">

    <AbsoluteLayout Margin="5,0,5,5">
        <FlexLayout IsVisible="True" JustifyContent="SpaceEvenly" Direction="Column" AlignItems="Center" Margin="30,0,30,0" >

            <media1:VideoView x:Name="video" AutoPlay="False" ShowControls="True" WidthRequest ="320" HeightRequest="202"/>

            <Button x:Name="TakeVideo" Clicked="TakeVideo_Clicked"
                    FontSize="Medium" TextColor="Black" 
                    BorderColor="Black"
                    CornerRadius="5" FlexLayout.AlignSelf="Stretch"  
                    HorizontalOptions="CenterAndExpand" Text="Tomar Video"></Button>

            <Button x:Name="btnver" IsVisible="true" Clicked="btnver_Clicked"
                    FontSize="Medium" TextColor="Black" 
                    BorderColor="Black"
                    CornerRadius="5" FlexLayout.AlignSelf="Stretch"  
                    HorizontalOptions="CenterAndExpand" Text="Ver Videos"></Button>

        </FlexLayout>
    </AbsoluteLayout>

</ContentPage>
